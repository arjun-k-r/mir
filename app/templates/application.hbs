{{head-layout}}
{{title (t "common.appname")}}

<main class="{{cssEnv}} {{cssRoute}}" lang={{locale}}>
  <aside class="Offline Notification has-text-centered u-Z20">
    <h2>{{t "app.network.offline"}}</h2>
    <p>{{t "app.network.offline-detail"}}</p>
  </aside>

  {{outlet}}

  <noscript class="NoScript Notification has-text-centered">
    <h1>{{t "app.noscript.title"}}</h1>
    <p>{{t "app.noscript.copy"}}</p>
  </noscript>

  {{ma-nav isAuthenticated=isAuthenticated}}
</main>
